extends ../layout

block content
  link(rel="stylesheet" href="/stylesheets/general/settings.css")
  script(src="/javascripts/general/settings.js")

  h1 Settings
  .spacer.v20

  .settings-container
    div
      .top
        h2 Dark Theme
        button#toggle-dark-button
      p Turn dark theme on and off.

      .spacer.v20
      .line

    div(style=`display: ${displays.loggedIn.true.block}`)
      .top
        h2 Change Password
        button#change-password-button Change
      p Change your password to something else.

      .spacer.v20
      .line

    div(style=`display: ${displays.loggedIn.true.block}`)
      .top
        h2 Log Out
        button#logout-button Log Out
      p Click to log out of this device.

      .spacer.v20
      .line
