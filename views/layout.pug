html
  head
    title Topal
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    link(rel="stylesheet" href="/stylesheets/global/award-design.css")
    link(rel="stylesheet" href="/stylesheets/global/confirmation.css")
