    link(rel="stylesheet" href="/stylesheets/global/footer.css")
    link(rel="stylesheet" href="/stylesheets/global/form-display.css")
    link(rel="stylesheet" href="/stylesheets/global/hamburger-icon.css")
    link(rel="stylesheet" href="/stylesheets/global/icons.css")
    link(rel="stylesheet" href="/stylesheets/global/log-display.css")
    link(rel="stylesheet" href="/stylesheets/global/sequel-display.css")
    link(rel="stylesheet" href="/stylesheets/global/signoff-display.css")
    link(rel="stylesheet" href="/stylesheets/global/slideshow.css")
