    script(src="/javascripts/global/utility.js")
  body
    .top-bar
      #nav-container
        .line

        a(href="/") Home

        .line

        .dropdown
          a.dropdown-trigger Awards
          .dropdown-content
            a(href="/awards/endurance") Endurance
            a(href="/awards/kayaking") Kayaking
            a(href="/awards/midmar-mile") Midmar Mile
            a(href="/awards/mountaineering") Mountaineering
            a(href="/awards/polar-bear") Polar Bear
            a(href="/awards/rock-climbing") Rock Climbing
            a(href="/awards/running") Running
            a(href="/awards/service") Service
            a(href="/awards/solitaire") Solitare
            a(href="/awards/venture") Venture

        .line

        a(href="/search") Search

        .line

        a(href=`/profile/${userId}` style=`display: ${displays.loggedIn.true.flex}`) Profile
        .line(style=`display: ${displays.loggedIn.true.flex}`)

        a(href="/settings") Settings

        .line

        a(href="/account/login" style=`display: ${displays.loggedIn.false.flex}`) Login
        .line(style=`display: ${displays.loggedIn.false.flex}`)

        a(href="/account/signup" style=`display: ${displays.loggedIn.false.flex}`) Signup
        .line(style=`display: ${displays.loggedIn.false.flex}`)

        a(href="/admin" style=`display: ${displays.permission.any.flex}`) Admin
        .line(style=`display: ${displays.permission.any.flex}`)

    .container
      block content

    #admin-icon(style=`display: ${displays.adminPage.true.block}`)
      span This page requires special permissions to view.
      img(src="/assets/icons/admin.png")

    #up-icon
      img(src="/assets/icons/arrow.png")

    footer
      a.corner(href="https://www.treverton.co.za" target="_blank") TREVERTON
      a.corner2(href="http://topal.click:90" target="_blank") TOPAL BETA
      p &copy 2023 <a href="/">TOPAL</a>

    #confirmation-container(style="display: none")
      #confirmation-prompt
        h2 Are You Sure?
        .spacer.v10
        h3 Info
        .spacer.v20
        .button-container
          button.transparent-button Nevermind
          button.transparent-button I'm Certain
