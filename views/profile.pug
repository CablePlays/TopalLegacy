extends layout

block content
  link(rel="stylesheet" href="/stylesheets/profile.css")
  script(src="/javascripts/profile.js")

  .top-block

  #tab-container
    .tab#default-tab(data-tab="awards")
      h3 Awards
      .underline
    .tab(data-tab="achievements")
      h3 Achievements
      .underline
    .tab(data-tab="admin" style=`display: ${awardsDisplay.flex}`)
      h3 Admin
      .underline

  #tab-div-container
    .tab-div#default-tab-div(data-tab="awards")
      h1 Awards

      .card
        h2 Midmar Mile
        img.space(src="/images/unchecked.png")

      .card
        h2 Polar Bear
        img.space(src="/images/checked.png")

      .card
        h2 Running
        h3.space Total Distance Run:
        h3 5000m / 100000m
        meter#running-distance-meter.space(max="100000" value="60000")
        img.space(src="/images/unchecked.png")

    .tab-div(data-tab="achievements")
      h1 Achievements coming soon!

    .tab-div(data-tab="admin")
      h1 ...
